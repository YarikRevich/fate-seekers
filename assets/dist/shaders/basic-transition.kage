//kage:unit pixels

package main

var Center vec2 // uniform: circle center coords

func Fragment(targetCoords vec4, src vec2, _ vec4) vec4 {
    distToCenter := distance(Center, targetCoords.xy)
	distToMain   := distToCenter - 80

	result := vec4(0, 0, 0, 0)

	if (distToMain < 0) {
		result = vec4(1, 0, 0, 1)
	} else if distToMain - 5 < 0 {
		result = vec4(20, 20, 20, 1)
	}
    	
	return result
}